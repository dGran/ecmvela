<a class="group focus:outline-none" {% for attr, value  in options %} {{ attr }}="{{ value }}"{% endfor %}>
    <span class="uppercase text-xs">{{ title }}</span>
    <span class="pl-3">
        {% if sorted %}
            {% if direction == 'desc' %}
                <i class="fa fa-sort-down text-slate-600 group-focus:text-sky-500"></i>
            {% else %}
                <i class="fa fa-sort-up text-slate-600 group-focus:text-sky-500"></i>
            {% endif %}
        {% else %}
            <i class="fa fa-sort text-slate-300 group-focus:text-sky-500"></i>
        {% endif %}
    </span>
</a>