{% extends 'base_admin.html.twig' %}

{% block title %}Tickets | {% endblock %}

{% block main %}
    {% set sales = view.sales %}
    {% set search = view.search %}

    {% include 'admin/sale/index/_header.html.twig' %}

    {% include 'admin/sale/index/_filters.html.twig' %}

    <div class="my-6">
        <div class="border border-slate-300 rounded-t-md {% if sales.pageCount == 1 %}rounded-b-md{% endif%} overflow-x-auto">
            {% if sales is empty %}
            <div class="py-6 px-3 flex flex-col items-center space-y-1.5 bg-slate-50">
                <span class="text-2xl animate__animated animate__tada animate__infinite">ðŸ˜–</span>
                <span>No se han encontrado tickets</span>
            </div>
            {% else %}
            <table class="min-w-full text-sm">
                {% include 'admin/sale/index/_table_header.html.twig' %}
                {% include 'admin/sale/index/_table_body.html.twig' %}
            </table>
            {% endif %}
        </div>
        {% include 'admin/sale/index/_paginator.html.twig' %}
    </div>

    {% include 'modal/admin/ajax-modal.html.twig' %}
{% endblock %}

{% block js %}
    <script src="{{ asset('build/app/js/admin/sale/delete-confirmation.js') }}"></script>
    <script src="{{ asset('build/app/js/admin/ajax-modal.js') }}"></script>
{% endblock %}