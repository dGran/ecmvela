<div class="lg:border-l-2">
    <div class="ml-4 mb-2 flex items-center">
        <div class="flex-initial flex items-center text-xs">
            <a href="{{ path('admin_booking', {'view': view, 'day': day|date_modify('-1 ' ~ view)|date('Y-m-d')}) }}"
               class="font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 w-8 h-8 flex items-center justify-center rounded-full focus:ring-gray-200 focus:bg-gray-100 hover:bg-gray-100 bg-transparent">
                <i class="fa-solid fa-chevron-left"></i>
            </a>
            <a href="{{ path('admin_booking', {'view': view, 'day': day|date_modify('+1 ' ~ view)|date('Y-m-d')}) }}"
               class="font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 w-8 h-8 flex items-center justify-center rounded-full focus:ring-gray-200 focus:bg-gray-100 hover:bg-gray-100 bg-transparent">
                <i class="fa-solid fa-chevron-right"></i>
            </a>
        </div>

        <div class="flex-1 ml-3">
            <p class="text-sm lg:text-base xl:text-lg {% if day|date('d') in calendar_month_data.public_holidays|keys %}text-red-500{% endif %}">
                <span class="hidden lg:inline-block mr-1.5">{{ day|date('l')|trans }},</span><span class="">{{ day|date('d')}} de {{ day|date('F')|trans }} de {{ day|date('Y') }}</span>
                {% if day|date('d') in calendar_month_data.public_holidays|keys %}
                    <span class="text-xs lg:text-sm xl:text-base font-semibold">-- {{ calendar_month_data.public_holidays[day|date('d')|number_format] }} --</span>
                {% endif %}
            </p>
        </div>
    </div>

    {% if view == 'day' %}
        {% include 'admin/booking/slots/_day_view.html.twig' %}
    {% endif %}

    {% if view == 'week' %}
        {% include 'admin/booking/slots/_week_view.html.twig' %}
    {% endif %}
</div>