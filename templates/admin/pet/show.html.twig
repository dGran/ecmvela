{% extends 'base-admin.html.twig' %}

{% block title %}Mascota: {{ pet.name }} | {% endblock %}

{% block main %}
    <header id="header" class="mb-6 md:mb-10 md:flex md:items-start">
        <div class="flex-auto max-w-4xl">
            <div class="flex items-center">
                <p class="mb-2 md:mb-4 text-xs md:text-sm font-semibold text-sky-500">Administración</p>
                <p class="mb-2 md:mb-4 px-1.5 text-xs md:text-sm font-semibold">/</p>
                <a href="{{ path('admin_pet') }}" class="mb-2 md:mb-4 text-xs md:text-sm font-semibold hover:text-sky-500 focus:text-sky-500">Mascotas</a>
            </div>

            <h1 class="flex-auto text-3xl md:text-4xl font-extrabold text-slate-900 tracking-tight">{{ pet.name }}</h1>
        </div>
    </header>

    <div class="my-8 flex items-start space-x-16">
        <div class="flex-1 mt-4 flex flex-col space-y-3 text-sm">
            <div class="flex items-start justify-between p-1.5 border-b space-x-4 hover:bg-slate-50">
                <p class="flex-1 font-medium text-right md:text-left w-full">Id</p>
                <p class="flex-1 text-left w-full">{{ pet.id }}</p>
            </div>
            <div class="flex items-start justify-between p-1.5 border-b space-x-4 hover:bg-slate-50">
                <p class="flex-1 font-medium text-right md:text-left w-full">Nombre del perro</p>
                <p class="flex-1 text-left w-full">{{ pet.name }}</p>
            </div>
            <div class="flex items-start justify-between space-x-4">
                <p class="flex-1 font-medium text-right md:text-left w-full">Observaciones</p>
                <p class="flex-1 text-left w-full">
                    {% if pet.notes %}
                        <textarea readonly class="w-full focus:outline-none" rows="3">{{ pet.notes }}</textarea>
                    {% else %}
                        -
                    {% endif %}
                </p>
            </div>
        </div>
        <div class="w-40 flex flex-col space-y-4">
            <a href="{{ path_index }}" class="w-full px-4 py-1.5 bg-sky-500 rounded font-medium text-white text-sm hover:bg-sky-600 focus:bg-sky-600 focus:outline-none">
                Atrás
            </a>
            <form method="post" action="{{ path('admin_pet_edit', {'id': pet.id}) }}">
                <input type="hidden" name="pathIndex" value="{{ path_index }}">
                <input type="hidden" name="pathFrom" value="show">
                <button type="submit" class="w-full px-4 py-1.5 bg-sky-500 rounded font-medium text-white text-sm hover:bg-sky-600 focus:bg-sky-600 focus:outline-none">
                    Editar
                </button>
            </form>
            <form method="post" action="{{ path('admin_pet_delete', {'id': pet.id}) }}">
                <input type="hidden" name="_token" value="{{ csrf_token('delete-' ~ pet.id) }}">
                <input type="hidden" name="pathIndex" value="{{ path_index }}">
                <button type="submit" data-name="{{ pet.name }}"
                        class="delete-action-button | w-full px-4 py-1.5 bg-rose-500 rounded font-medium text-white text-sm hover:bg-rose-600 focus:bg-rose-600 focus:outline-none">
                    Eliminar
                </button>
            </form>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script src="{{ asset('build/app/js/admin/pet/delete-confirmation.js') }}"></script>
{% endblock %}