            {{ encore_entry_script_tags('app') }}
{#            <script src="https://unpkg.com/flowbite@1.5.5/dist/flowbite.js"></script>#}
            <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.3.5/dist/alpine.min.js" defer></script>
            <script src="https://cdn.jsdelivr.net/npm/tw-elements/dist/js/index.min.js"></script>
        {% endblock %}
    </head>
    <body class="bg-white">
        {# whatsapp float button #}
        <a class="fixed w-14 h-14 bottom-4 lg:bottom-10 right-4 lg:right-10 bg-teal-600/60 text-white rounded-full text-center text-2xl shadow-lg z-30 hover:bg-teal-600/80 transition ease-in-out duration-150"
           href="https://api.whatsapp.com/send?phone=624273038" target="_blank">
            <i class="fa-brands fa-whatsapp mt-4"></i>
        </a>

        <div class="flex flex-col h-screen justify-between">
            {% include "layout/main/header.html.twig" %}
            <main class="mb-auto">
                {% block main %}{% endblock %}
            </main>
            {% include "layout/main/footer.html.twig" %}
        </div>

